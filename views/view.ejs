<%-include("partials/header.ejs")%>
<body>
	<%if(locals.data){%>
	<div class="container text-center">
		<div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
			<%data.forEach((book)=>{%>
				<div class="card" style="margin:15px;width:500px;">
					<div class="card-body">
						<div class="gr">

							<img src=<%=book.img%> alt="book_cover" class='bookcover'>
							<h2>
								<%=book.title%></a>
							</h2>

							<p><strong>Author:</strong>
								<%=book.author%>
							</p>
							<form action="/make" method="get">
								<input type="hidden" name="Book_id" value=<%=book.id%>>
							<button type="submit" class="btn btn-info">Make Notes</button>
					
						</form>
						<form action="/view" method="get">
							<input type="hidden" name="Book_id" value=<%=book.id%>>
						
						<button type="submit" class="btn btn-info">View Notes</button>
					</form>	
					</div>

					</div>
				</div>

				<%})%>
		</div>
	</div>

  
	<%}else if(locals.msg){%>
	
		
        <div class="msg" style="height:100vh;
		width:100%;
		display:flex;
		justify-content: center;
		align-items: center;">
